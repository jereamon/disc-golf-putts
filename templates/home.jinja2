{% extends "base.jinja2" %}

{% block content %}
<div class="outer-container">
    <div class="putt-avgs-outer-container">
        <h2>Today's Averages</h2>
        <div class="putt-avgs-inner-container">
            {% for putt_avg in today_putt_avgs %}
                <div class='putt-avg-container'>
                    <h5>{{ putt_avg }}'</h5>
                    <p>{{ today_putt_avgs[putt_avg] }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="putt-avgs-outer-container">
        <h2>All Time Averages</h2>
        <div class="putt-avgs-inner-container">
            {% for putt_avg in putt_avgs %}
                <div class='putt-avg-container'>
                    <h5>{{ putt_avg }}'</h5>
                    <p>{{ putt_avgs[putt_avg] }}</p>
                </div>
            {% endfor %}
        </div>
    </div>


</div>
{% endblock content %}