{% extends "base.jinja2" %}

{% block content %}
<div class="outer-container">
    <div class="new-puttsesh-container">
        <h3>Start a new putting session</h3>
        <form class="puttsesh-form" method='POST'>
            <div class='form-group'>
                <label for='no-putters'>Number of Putters</label>
                <input type='number' name='no-putters'>
            </div>
            <div class='form-group'>
                <label>
                    Random Distances
                    <input type='radio' name='session_dist_select' value='rand-dist'>
                </label>
            </div>
            <div class='form-group'>
                <label>
                    Incrementing Distances
                    <input type='radio' name='session_dist_select' value='inc-dist'>
                </label>
            </div>
            <div class='form-group'>
                <label>
                    Input Distances
                    <input type='radio' name='session_dist_select' value='input-dist'>
                </label>
            </div>
            <div class='form-group'>
                <input type='submit' value='Start Putting!'>
            </div>
        </form>
    </div>
</div>
{% endblock content %}